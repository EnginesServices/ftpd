      {
        "name": "list_user_keys",
        "return_type": "json",
        "script": {
          "content": "#!bin/sh\r\n\r\necho -n '{\"users\":['\r\nn=0\r\nfor user in `ls  /etc/sftp/authorized_keys/`\r\n do\r\n   if test $n -eq 0\r\n    n=1\r\n   else\r\n    echo -n ,\r\n  fi\r\n   echo -n '\"'$user'\"'\r\n  \r\n done\r\n echo ']}'\r\n"
        }
